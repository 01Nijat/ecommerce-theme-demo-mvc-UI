@{
    ViewData["Title"] = "Login";
}


<div class="row">
    <div class="col">
        <h1 class="display-4 border-bottom text-center pb=2">@ViewData["Title"]</h1>
    </div>
</div>
<div class="row">
    <div class="col-4 offset-4">
        <form>
            <div class="form-group mb-3">
                <label class="form-label">Username</label>
                <input class="form-control" placeholder="Ad" />
            </div>
            <div class="form-group mb-3">
                <label class="form-label">Password</label>
                <input class="form-control" placeholder="******" />
            </div>
            <div class="form-group mb-3 d-grid">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-right-to-bracket"></i>Login</button>
            </div>
        </form>
    </div>

</div>